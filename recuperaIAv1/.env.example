# =============================================================================
# RECUPERA.IA - ENVIRONMENT VARIABLES
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION
# -----------------------------------------------------------------------------
VITE_SUPABASE_URL=https://seu-projeto.supabase.co
VITE_SUPABASE_ANON_KEY=sua-chave-anonima-aqui

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
# Modo da API: 'supabase' ou 'backend'
VITE_API_MODE=supabase

# URL do backend REST (quando VITE_API_MODE=backend)
VITE_API_BASE_URL=https://api.recupera.ia

# Timeout de requests em milissegundos
VITE_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# APP CONFIGURATION
# -----------------------------------------------------------------------------
VITE_APP_NAME=Recupera.IA
VITE_APP_VERSION=3.0.0
VITE_APP_ENV=development
VITE_APP_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Analytics
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Error Tracking (Sentry)
VITE_ENABLE_ERROR_TRACKING=false
VITE_SENTRY_DSN=

# Debug Mode
VITE_DEBUG_MODE=true

# Cache TTL (em segundos)
VITE_CACHE_TTL_SHORT=300
VITE_CACHE_TTL_MEDIUM=600
VITE_CACHE_TTL_LONG=1800

# -----------------------------------------------------------------------------
# TANSTACK QUERY CONFIGURATION
# -----------------------------------------------------------------------------
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=600000
VITE_QUERY_RETRY=3
VITE_QUERY_REFETCH_ON_WINDOW_FOCUS=true
VITE_QUERY_REFETCH_ON_RECONNECT=true

# -----------------------------------------------------------------------------
# STORAGE CONFIGURATION
# -----------------------------------------------------------------------------
VITE_STORAGE_PREFIX=recupera_ia_
VITE_SESSION_TIMEOUT=3600000

# -----------------------------------------------------------------------------
# WHATSAPP CONFIGURATION
# -----------------------------------------------------------------------------
VITE_WHATSAPP_API_VERSION=v18.0

# -----------------------------------------------------------------------------
# OTHER
# -----------------------------------------------------------------------------
# Timezone
VITE_TIMEZONE=America/Sao_Paulo

# Locale
VITE_LOCALE=pt-BR

# Currency
VITE_CURRENCY=BRL
